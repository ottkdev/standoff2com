// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  MODERATOR
  ADMIN
}

enum MarketplaceStatus {
  PENDING
  ACTIVE
  SOLD
  REJECTED
  DELETED
}

enum WalletTransactionType {
  DEPOSIT
  DEPOSIT_FEE
  HOLD
  RELEASE
  REFUND
  WITHDRAW_REQUEST
  WITHDRAW_APPROVED
  WITHDRAW_REJECTED
  WITHDRAW_PAID
}

enum WalletTransactionStatus {
  PENDING
  SUCCESS
  FAILED
  CANCELLED
}

enum WalletTransactionProvider {
  PAYTR
  INTERNAL
  MANUAL
}

enum DepositStatus {
  PENDING
  SUCCESS
  FAILED
}

enum WithdrawalStatus {
  PENDING
  APPROVED
  PAID
  REJECTED
  CANCELLED
}

enum OrderStatus {
  PENDING_DELIVERY
  COMPLETED
  DISPUTED
  REFUNDED
  CANCELLED
}

enum DisputeStatus {
  OPEN
  RESOLVED
}

enum DisputeResolution {
  REFUND_BUYER
  RELEASE_SELLER
  PARTIAL
}

model User {
  id          String    @id @default(cuid())
  username    String    @unique
  email       String    @unique
  password    String
  displayName String?
  bio         String?   @db.Text
  avatarUrl   String?
  role        UserRole  @default(USER)
  isVerified  Boolean   @default(false)
  isBanned    Boolean   @default(false)
  bannedUntil DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Forum stats
  postCount    Int @default(0)
  commentCount Int @default(0)

  // Relations
  posts            Post[]
  comments         Comment[]
  blogPosts        BlogPost[]
  blogComments     BlogComment[]
  listings         MarketplaceListing[] @relation("Seller")
  sentMessages     Message[]            @relation("MessageSender")
  receivedMessages Message[]            @relation("MessageReceiver")

  // Follow system
  followers Follow[] @relation("Follower")
  following Follow[] @relation("Following")

  // Badges
  badges UserBadge[]

  // Notifications
  notifications        Notification[]
  notificationsActed   Notification[] @relation("NotificationActor")

  // Likes
  likedPosts     PostLike[]
  likedComments  CommentLike[]
  likedBlogPosts BlogLike[]

  // Admin actions
  approvedListings MarketplaceListing[] @relation("Approver")

  // Wiki
  wikiArticles WikiArticle[]
  wikiComments WikiComment[]
  wikiLikes    WikiLike[]

  // Block system
  blockedUsers Block[] @relation("Blocker")
  blockedBy    Block[] @relation("Blocked")

  // Moderation
  reportsCreated   Report[]     @relation("Reporter")
  reportsReviewed  Report[]     @relation("Reviewer")
  postsDeleted     Post[]       @relation("PostDeleter")
  commentsDeleted  Comment[]    @relation("CommentDeleter")
  auditLogs        AuditLog[]

  // Wallet
  wallet              Wallet?
  walletTransactions  WalletTransaction[]
  deposits            Deposit[]
  withdrawalRequests  WithdrawalRequest[]
  withdrawalsReviewed WithdrawalRequest[] @relation("WithdrawalReviewer")
  
  // Marketplace Orders
  ordersAsBuyer       MarketplaceOrder[] @relation("Buyer")
  ordersAsSeller      MarketplaceOrder[] @relation("Seller")
  disputesOpened       Dispute[]         @relation("DisputeOpener")
  disputesResolved     Dispute[]         @relation("DisputeResolver")
  tradeConversationsAsBuyer  TradeConversation[] @relation("Buyer")
  tradeConversationsAsSeller  TradeConversation[] @relation("Seller")
  tradeMessagesSent    TradeMessage[]    @relation("TradeMessageSender")

  @@map("users")
}

model Badge {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?  @db.Text
  iconUrl     String?
  color       String?
  createdAt   DateTime @default(now())

  users UserBadge[]

  @@map("badges")
}

model UserBadge {
  userId   String
  badgeId  String
  earnedAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  badge Badge @relation(fields: [badgeId], references: [id], onDelete: Cascade)

  @@unique([userId, badgeId])
  @@map("user_badges")
}

model Category {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  description String?  @db.Text
  icon        String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  posts     Post[]
  blogPosts BlogPost[]

  @@map("categories")
}

model Post {
  id           String    @id @default(cuid())
  title        String
  content      String    @db.Text
  slug         String    @unique
  isPinned     Boolean   @default(false)
  isLocked     Boolean   @default(false)
  authorId     String
  categoryId   String
  viewCount    Int       @default(0)
  likeCount    Int       @default(0)
  commentCount Int       @default(0)
  deletedAt    DateTime? // Soft delete
  deletedById  String?   // Who deleted it
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  author   User        @relation(fields: [authorId], references: [id], onDelete: Cascade)
  category Category    @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  deleter  User?       @relation("PostDeleter", fields: [deletedById], references: [id], onDelete: SetNull)
  comments Comment[]
  images   PostImage[]
  likes    PostLike[]

  @@index([categoryId])
  @@index([authorId])
  @@index([createdAt])
  @@index([deletedAt])
  @@map("posts")
}

model PostImage {
  id        String   @id @default(cuid())
  url       String
  postId    String
  order     Int      @default(0)
  createdAt DateTime @default(now())

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@index([postId])
  @@map("post_images")
}

model Comment {
  id         String    @id @default(cuid())
  content    String    @db.Text
  postId     String
  authorId   String
  parentId   String?
  likeCount  Int       @default(0)
  deletedAt DateTime? // Soft delete
  deletedById String? // Who deleted it
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  author   User          @relation(fields: [authorId], references: [id], onDelete: Cascade)
  post     Post          @relation(fields: [postId], references: [id], onDelete: Cascade)
  parent   Comment?      @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  deleter  User?         @relation("CommentDeleter", fields: [deletedById], references: [id], onDelete: SetNull)
  replies  Comment[]     @relation("CommentReplies")
  likes    CommentLike[]

  @@index([postId])
  @@index([authorId])
  @@index([parentId])
  @@index([deletedAt])
  @@map("comments")
}

model PostLike {
  userId    String
  postId    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([userId, postId])
  @@map("post_likes")
}

model CommentLike {
  userId    String
  commentId String
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  comment Comment @relation(fields: [commentId], references: [id], onDelete: Cascade)

  @@unique([userId, commentId])
  @@map("comment_likes")
}

model BlogPost {
  id           String    @id @default(cuid())
  title        String
  content      String    @db.Text
  excerpt      String?   @db.Text
  slug         String    @unique
  coverImage   String?
  categoryId   String?
  authorId     String
  isPublished  Boolean   @default(false)
  publishedAt  DateTime?
  viewCount    Int       @default(0)
  likeCount    Int       @default(0)
  commentCount Int       @default(0)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  author   User          @relation(fields: [authorId], references: [id], onDelete: Cascade)
  category Category?     @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  comments BlogComment[]
  likes    BlogLike[]

  @@index([authorId])
  @@index([categoryId])
  @@index([isPublished, publishedAt])
  @@index([slug])
  @@map("blog_posts")
}

model BlogComment {
  id         String   @id @default(cuid())
  content    String   @db.Text
  blogPostId String
  authorId   String
  parentId   String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  author   User          @relation(fields: [authorId], references: [id], onDelete: Cascade)
  blogPost BlogPost      @relation(fields: [blogPostId], references: [id], onDelete: Cascade)
  parent   BlogComment?  @relation("BlogCommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies  BlogComment[] @relation("BlogCommentReplies")

  @@index([blogPostId])
  @@index([authorId])
  @@map("blog_comments")
}

model BlogLike {
  userId     String
  blogPostId String
  createdAt  DateTime @default(now())

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  blogPost BlogPost @relation(fields: [blogPostId], references: [id], onDelete: Cascade)

  @@unique([userId, blogPostId])
  @@map("blog_likes")
}

model Message {
  id         String    @id @default(cuid())
  content    String    @db.Text
  senderId   String
  receiverId String
  isRead     Boolean   @default(false)
  readAt     DateTime?
  createdAt  DateTime  @default(now())

  sender   User @relation("MessageSender", fields: [senderId], references: [id], onDelete: Cascade)
  receiver User @relation("MessageReceiver", fields: [receiverId], references: [id], onDelete: Cascade)

  @@index([senderId, receiverId])
  @@index([receiverId, isRead])
  @@map("messages")
}

model MarketplaceListing {
  id             String            @id @default(cuid())
  title          String
  description    String            @db.Text
  price          Float
  status         MarketplaceStatus @default(PENDING)
  sellerId       String
  approvedById   String?
  rejectedReason String?           @db.Text
  approvedAt     DateTime?
  rejectedAt     DateTime?
  deletedAt      DateTime?
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt

  seller   User               @relation("Seller", fields: [sellerId], references: [id], onDelete: Cascade)
  approver User?              @relation("Approver", fields: [approvedById], references: [id], onDelete: SetNull)
  images   MarketplaceImage[]
  orders   MarketplaceOrder[]

  @@index([sellerId])
  @@index([status])
  @@index([createdAt])
  @@index([deletedAt])
  @@map("marketplace_listings")
}

model MarketplaceImage {
  id        String   @id @default(cuid())
  url       String
  listingId String
  order     Int      @default(0)
  createdAt DateTime @default(now())

  listing MarketplaceListing @relation(fields: [listingId], references: [id], onDelete: Cascade)

  @@index([listingId])
  @@map("marketplace_images")
}

model Follow {
  followerId  String
  followingId String
  createdAt   DateTime @default(now())

  follower  User @relation("Follower", fields: [followerId], references: [id], onDelete: Cascade)
  following User @relation("Following", fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId])
  @@map("follows")
}

model Block {
  blockerId String
  blockedId String
  createdAt DateTime @default(now())

  blocker User @relation("Blocker", fields: [blockerId], references: [id], onDelete: Cascade)
  blocked User @relation("Blocked", fields: [blockedId], references: [id], onDelete: Cascade)

  @@id([blockerId, blockedId])
  @@map("blocks")
}

model SiteSettings {
  id               String   @id @default("site-settings")
  siteName         String   @default("Standoff 2 Topluluk")
  siteDescription  String?  @db.Text
  logoUrl          String?
  footerText       String?  @db.Text
  registrationOpen Boolean  @default(true)
  guestViewing     Boolean  @default(true)
  emailFromName    String?  @default("Standoff 2 Topluluk")
  emailFromEmail   String?
  updatedAt        DateTime @updatedAt

  @@map("site_settings")
}

model Notification {
  id         String    @id @default(cuid())
  title      String
  content    String    @db.Text
  type       String    @default("info") // follow, forum_reply, comment_reply, marketplace_approval, marketplace_rejection, marketplace_sold, admin_warning, admin_ban, system_announcement
  userId     String?   // null = tüm kullanıcılara
  actorId    String?   // Who triggered the notification (nullable for system notifications)
  targetType String?   // post, comment, listing, user, system
  targetId   String?   // ID of the target (post ID, comment ID, listing ID, etc.)
  url        String?   // URL to navigate to when clicked
  isRead     Boolean   @default(false)
  readAt     DateTime?
  createdAt  DateTime  @default(now())

  user  User?  @relation(fields: [userId], references: [id], onDelete: Cascade)
  actor User?  @relation("NotificationActor", fields: [actorId], references: [id], onDelete: SetNull)

  @@index([userId, isRead])
  @@index([userId, createdAt])
  @@index([actorId])
  @@index([targetType, targetId])
  @@index([createdAt])
  @@map("notifications")
}

enum ReportReason {
  SPAM
  HARASSMENT
  INAPPROPRIATE_CONTENT
  COPYRIGHT_VIOLATION
  SCAM
  OTHER
}

enum ReportStatus {
  OPEN
  REVIEWED
  RESOLVED
  DISMISSED
  APPROVED
  REJECTED
}

enum ReportTargetType {
  POST
  COMMENT
  LISTING
  PROFILE
}

model Report {
  id          String           @id @default(cuid())
  reporterId  String
  targetType  ReportTargetType
  targetId    String
  reason      ReportReason
  note        String?          @db.Text
  status      ReportStatus     @default(OPEN)
  reviewedById String?
  reviewedAt  DateTime?
  adminNote   String?          @db.Text
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  reporter   User         @relation("Reporter", fields: [reporterId], references: [id], onDelete: Cascade)
  reviewer   User?        @relation("Reviewer", fields: [reviewedById], references: [id], onDelete: SetNull)
  // Note: targetId is polymorphic - no foreign key constraint

  @@index([targetType, targetId])
  @@index([reporterId])
  @@index([status])
  @@index([createdAt])
  @@map("reports")
}

enum AuditAction {
  DELETE_POST
  RESTORE_POST
  DELETE_COMMENT
  RESTORE_COMMENT
  DELETE_LISTING
  RESTORE_LISTING
  WARN_USER
  TEMP_BAN_USER
  PERM_BAN_USER
  UNBAN_USER
  APPROVE_REPORT
  DISMISS_REPORT
}

model AuditLog {
  id        String       @id @default(cuid())
  actorId   String
  action    AuditAction
  targetType String?     // post, comment, listing, user, report
  targetId  String?
  details   String?      @db.Text // JSON or text details
  ipAddress String?
  userAgent String?
  createdAt DateTime     @default(now())

  actor User @relation(fields: [actorId], references: [id], onDelete: Cascade)

  @@index([actorId])
  @@index([action])
  @@index([targetType, targetId])
  @@index([createdAt])
  @@map("audit_logs")
}

enum WikiCategory {
  SILAHLAR
  HARITALAR
  OYUN_MODLARI
  RUTBELER
  GUNCELLEMELER
  SKINLER
  EKONOMI
  TAKTIKLER
  SSS
}

model WikiArticle {
  id              String       @id @default(cuid())
  title           String
  slug            String       @unique
  content         String       @db.Text
  excerpt         String?      @db.Text
  category        WikiCategory
  authorId        String
  isPublished     Boolean      @default(true)
  viewCount       Int          @default(0)
  likeCount       Int          @default(0)
  commentCount    Int          @default(0)
  featuredImage   String?
  metaTitle       String?
  metaDescription String?      @db.Text
  keywords        String?      @db.Text
  relatedArticles String?      @db.Text // JSON array of article IDs
  tableOfContents String?      @db.Text // Auto-generated TOC
  publishedAt     DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  createdAt       DateTime     @default(now())

  author   User          @relation(fields: [authorId], references: [id], onDelete: Cascade)
  comments WikiComment[]
  likes    WikiLike[]

  @@index([category])
  @@index([slug])
  @@index([isPublished, publishedAt])
  @@index([authorId])
  @@map("wiki_articles")
}

model WikiComment {
  id        String   @id @default(cuid())
  content   String   @db.Text
  articleId String
  authorId  String
  parentId  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  author  User          @relation(fields: [authorId], references: [id], onDelete: Cascade)
  article WikiArticle   @relation(fields: [articleId], references: [id], onDelete: Cascade)
  parent  WikiComment?  @relation("WikiCommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies WikiComment[] @relation("WikiCommentReplies")

  @@index([articleId])
  @@index([authorId])
  @@map("wiki_comments")
}

model WikiLike {
  userId    String
  articleId String
  createdAt DateTime @default(now())

  user    User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  article WikiArticle @relation(fields: [articleId], references: [id], onDelete: Cascade)

  @@unique([userId, articleId])
  @@map("wiki_likes")
}

model Wallet {
  id              String   @id @default(cuid())
  userId          String   @unique
  balanceAvailable Int    @default(0) // in kuruş
  balanceHeld     Int     @default(0) // in kuruş (escrow holds + withdrawal holds)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("wallets")
}

model WalletTransaction {
  id          String                   @id @default(cuid())
  userId      String
  type        WalletTransactionType
  amount      Int                      // in kuruş (always positive, direction implied by type)
  status      WalletTransactionStatus
  provider    WalletTransactionProvider
  referenceId String?                  // PayTR order id, escrow order id, withdraw id, etc.
  meta        Json?                    // store details safely
  createdAt   DateTime                 @default(now())

  user        User                     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([type])
  @@index([status])
  @@index([referenceId])
  @@index([createdAt])
  @@map("wallet_transactions")
}

model Deposit {
  id              String        @id @default(cuid())
  userId          String
  grossAmount     Int           // in kuruş (amount charged on PayTR)
  netCreditAmount Int           // in kuruş (amount credited to wallet)
  feeAmount       Int           // in kuruş (10% of net)
  status          DepositStatus
  paytrMerchantOid String      @unique
  paytrResponse   Json?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([paytrMerchantOid])
  @@index([createdAt])
  @@map("deposits")
}

model WithdrawalRequest {
  id          String           @id @default(cuid())
  userId      String
  amount      Int              // in kuruş
  iban        String
  accountName String
  status      WithdrawalStatus
  requestedAt DateTime         @default(now())
  reviewedAt  DateTime?
  paidAt      DateTime?
  reviewedById String?
  rejectReason String?         @db.Text
  meta        Json?

  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  reviewer    User?            @relation("WithdrawalReviewer", fields: [reviewedById], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([status])
  @@index([requestedAt])
  @@map("withdrawal_requests")
}

model MarketplaceOrder {
  id            String      @id @default(cuid())
  listingId    String      @unique // Only one active order per listing
  buyerId      String
  sellerId     String
  amount       Int         // in kuruş
  status       OrderStatus
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  autoReleaseAt DateTime?  // Auto-release after 72h if not disputed
  completedAt  DateTime?
  disputedAt   DateTime?

  listing      MarketplaceListing @relation(fields: [listingId], references: [id], onDelete: Cascade)
  buyer        User               @relation("Buyer", fields: [buyerId], references: [id], onDelete: Cascade)
  seller       User               @relation("Seller", fields: [sellerId], references: [id], onDelete: Cascade)
  dispute      Dispute?
  conversation TradeConversation?

  @@index([buyerId])
  @@index([sellerId])
  @@index([status])
  @@index([createdAt])
  @@index([autoReleaseAt])
  @@map("marketplace_orders")
}

model Dispute {
  id          String            @id @default(cuid())
  orderId     String            @unique
  openedById  String
  reason      String            @db.Text
  note        String?           @db.Text
  status      DisputeStatus
  resolvedById String?
  resolution  DisputeResolution?
  meta        Json?
  createdAt   DateTime          @default(now())
  resolvedAt DateTime?

  order       MarketplaceOrder  @relation(fields: [orderId], references: [id], onDelete: Cascade)
  opener      User              @relation("DisputeOpener", fields: [openedById], references: [id], onDelete: Cascade)
  resolver    User?             @relation("DisputeResolver", fields: [resolvedById], references: [id], onDelete: SetNull)

  @@index([openedById])
  @@index([status])
  @@index([createdAt])
  @@map("disputes")
}

model TradeConversation {
  id        String   @id @default(cuid())
  orderId  String   @unique
  buyerId  String
  sellerId String
  isLocked Boolean  @default(false)
  createdAt DateTime @default(now())
  lockedAt  DateTime?

  order    MarketplaceOrder @relation(fields: [orderId], references: [id], onDelete: Cascade)
  buyer    User             @relation("Buyer", fields: [buyerId], references: [id], onDelete: Cascade)
  seller   User             @relation("Seller", fields: [sellerId], references: [id], onDelete: Cascade)
  messages TradeMessage[]

  @@index([buyerId, sellerId])
  @@index([orderId])
  @@map("trade_conversations")
}

model TradeMessage {
  id        String   @id @default(cuid())
  conversationId String
  senderId String
  content   String   @db.Text
  isRead   Boolean  @default(false)
  readAt   DateTime?
  createdAt DateTime @default(now())

  conversation TradeConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender       User               @relation("TradeMessageSender", fields: [senderId], references: [id], onDelete: Cascade)

  @@index([conversationId])
  @@index([senderId])
  @@index([createdAt])
  @@map("trade_messages")
}
